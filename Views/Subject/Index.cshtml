@model IEnumerable<MVC.Models.Subject>


<div class="container p-3">
    <div class="row pt-4">
        <form asp-controller="Subject" asp-action="Index">
            <p>
                Name : <input type="text" name="SearchString" />
                <input type="submit" value="Filter">
            </p>
        </form>
        <div class="col-8">
            <h2 class="text-primary">Subject List</h2>
        </div>
        <a asp-controller="Subject" asp-action="Edit" class="btn btn-primary">
            Create New Subject
        </a>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Syllabus</th>
                    <th>Credits</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model)
                {
                    <tr>
                        <td width="50%">@obj1.Subject_name</td>
                        <td>@obj1.Syllabus</td>
                        <td>@obj1.credits</td>
                        <td>
                            <a asp-controller="Subject" asp-action="Edit" asp-route-Subject_id="@obj1.Subject_id"
                        class="btn btn-secondary">Edit</a>
                            <a asp-controller="Subject" asp-action="Delete" asp-route-Subject_id="@obj1.Subject_id"
                        class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No subject details.</p>
    }
</div>